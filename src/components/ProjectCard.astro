---
interface Props {
    title: string;
    funder: string;
    duration: string;
    role: string;
    status: "ongoing" | "completed";
    type: string;
    description?: string;
    pillar?: string;
    logo?: string;
}

const {
    title,
    funder,
    duration,
    role,
    status,
    type,
    description,
    pillar,
    logo,
} = Astro.props;

const pillarConfig: Record<
    string,
    {
        label: string;
        text: string;
        spacing: string;
    }
> = {
    perception: {
        label: "Resilient Perception",
        text: "text-blue-700",
        spacing: "pr-1 pb-1 mt-0",
    },
    inspection: {
        label: "Industrial AIoT",
        text: "text-emerald-700",
        spacing: "pr-1 pb-0 -mt-2",
    },
    robotics: {
        label: "Embodied AI",
        text: "text-purple-700",
        spacing: "pr-1 pb-1 mt-0",
    },
    academic: {
        label: "Academic",
        text: "text-orange-700",
        spacing: "pr-1 pb-1 mt-0",
    },
};
---

<div
    class="relative p-6 bg-white rounded-xl border border-gray-border shadow-sm hover:shadow-lg transition-all duration-300 card-hover overflow-hidden group"
>
    {/* Watermark Pillar Graphic */}
    {
        pillar && pillarConfig[pillar] && (
            <div
                class:list={[
                    "absolute bottom-0 right-0 flex flex-col items-end opacity-50 group-hover:opacity-100 transition-all duration-500 pointer-events-none z-0",
                    pillarConfig[pillar].text,
                ]}
            >
                <div class="w-20 h-20 transform rotate-12 transition-transform duration-500 group-hover:rotate-0 group-hover:scale-110">
                    {pillar === "perception" && (
                        <svg
                            class="w-full h-full"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"
                            />
                        </svg>
                    )}
                    {pillar === "inspection" && (
                        <svg
                            class="w-full h-full"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                            />
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                            />
                        </svg>
                    )}
                    {pillar === "robotics" && (
                        <svg
                            class="w-full h-full"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                            />
                        </svg>
                    )}
                    {pillar === "academic" && (
                        <svg
                            class="w-full h-full"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 14l9-5-9-5-9 5 9 5z"
                            />
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"
                            />
                        </svg>
                    )}
                </div>
                <span
                    class:list={[
                        "text-[0.6rem] font-bold tracking-widest uppercase text-right opacity-0 group-hover:opacity-100 transition-opacity duration-300 transform translate-y-2 group-hover:translate-y-0",
                        pillarConfig[pillar].spacing,
                    ]}
                >
                    {pillarConfig[pillar].label}
                </span>
            </div>
        )
    }

    <div class="relative z-10 w-full h-full flex flex-col">
        <div class="flex items-center justify-between mb-4">
            <span
                class:list={[
                    "badge",
                    status === "ongoing" ? "badge-ongoing" : "badge-completed",
                ]}
            >
                {status === "ongoing" ? "üîÑ Ongoing" : "‚úì Completed"}
            </span>
            <span
                class:list={[
                    "badge",
                    type === "industry"
                        ? "bg-orange-100 text-orange-800"
                        : "bg-cyan-100 text-cyan-800",
                ]}
            >
                {type === "industry" ? "üè≠ Industry" : "üèõÔ∏è Government"}
            </span>
        </div>

        <h3 class="text-lg font-semibold text-navy mb-3 leading-snug">
            {title}
        </h3>

        <div class="space-y-2 text-sm flex-grow">
            <div class="flex items-center gap-2 text-gray-text">
                <div
                    class="w-4 h-4 flex-shrink-0 flex items-center justify-center"
                >
                    <span class="text-lg leading-none" title="Funder">üè¢</span>
                </div>
                {
                    logo ? (
                        <div class="flex items-center gap-2">
                            <img
                                src={logo}
                                alt={funder}
                                class="h-6 w-auto object-contain"
                            />
                            <span class="font-medium text-navy">{funder}</span>
                        </div>
                    ) : (
                        <span class="font-medium text-navy">{funder}</span>
                    )
                }
            </div>

            <div class="flex items-center gap-2 text-gray-text">
                <svg
                    class="w-4 h-4 flex-shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                    ></path>
                </svg>
                <span>{duration}</span>
            </div>

            <div class="flex items-start gap-2 text-gray-text">
                <svg
                    class="w-4 h-4 mt-0.5 flex-shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                    ></path>
                </svg>
                <span class="leading-tight">{role}</span>
            </div>
        </div>

        {
            description && (
                <p class="mt-4 text-sm text-gray-text border-t border-gray-border pt-4">
                    {description}
                </p>
            )
        }
    </div>
</div>

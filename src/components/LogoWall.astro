---
interface Logo {
    name: string;
    logo: string;
    url?: string;
}

interface Props {
    title: string;
    logos: Logo[];
}

const { title, logos } = Astro.props;
---

<div class="mb-12">
    <h3 class="text-xl font-heading font-semibold text-navy mb-6 text-center">
        {title}
    </h3>
    <div
        class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6"
    >
        {
            logos.map((item) => (
                <a
                    href={item.url || "#"}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center justify-center p-4 bg-white rounded-xl border border-gray-border hover:border-accent/30 hover:shadow-md transition-all duration-300 aspect-square"
                >
                    <img
                        src={item.logo}
                        alt={item.name}
                        class="max-w-full max-h-full object-contain grayscale hover:grayscale-0 transition-all duration-300"
                        loading="lazy"
                    />
                </a>
            ))
        }
    </div>
</div>

---
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionHeader from "../components/SectionHeader.astro";
import PIAwardCard from "../components/PIAwardCard.astro";
import TimelineCard from "../components/TimelineCard.astro";
import awards from "../data/awards.json";

// Sort awards by year descending and exclude student merit awards
const sortedAwards = [...awards]
    .filter((a) => a.category !== "student_merit")
    .sort((a, b) => b.year - a.year);
const meritAwards = sortedAwards.filter((a) => a.category === "merit");
const paperAwards = sortedAwards.filter((a) => a.category === "paper");
const competitionAwards = sortedAwards.filter(
    (a) => a.category === "competition",
);

// Helper function to get border color class by category
const getBorderColor = (category: string) => {
    switch (category) {
        case "merit":
            return "border-l-amber-500";
        case "paper":
            return "border-l-blue-500";
        case "competition":
            return "border-l-emerald-500";
        default:
            return "border-l-gray-500";
    }
};

// Helper function to get text color class by category
const getTextColor = (category: string) => {
    switch (category) {
        case "merit":
            return "text-amber-600";
        case "paper":
            return "text-blue-600";
        case "competition":
            return "text-green-600";
        default:
            return "text-gray-600";
    }
};

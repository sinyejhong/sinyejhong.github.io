                    [...new Set(sortedAwards.map((a) => a.year))].map(
                        (year) => (
                            <div
                                class="pi-year-group mb-12 last:mb-0"
                                data-year={year}
                            >
                                <div class="year-header flex items-center gap-4 mb-6 py-2">
                                    <div class="text-2xl font-bold text-navy">
                                        {year}
                                    </div>
                                    <div class="flex-1 h-px bg-gradient-to-r from-accent/50 to-transparent" />
                                    <span class="text-sm text-gray-400 font-medium pi-year-count">
                                        {
                                            sortedAwards.filter(
                                                (a) => a.year === year,
                                            ).length
                                        }{" "}
                                        {sortedAwards.filter(
                                            (a) => a.year === year,
                                        ).length > 1
                                            ? "awards"
                                            : "award"}
                                    </span>
                                </div>
                                <div class="grid md:grid-cols-2 gap-6 pi-awards-grid">
                                    {sortedAwards
                                        .filter((a) => a.year === year)
                                        .map((award) => (
                                            <div
                                                class="pi-award-item"
                                                data-category={award.category}
                                            >
                                                <PIAwardCard
                                                    title={award.title}
                                                    event={award.event}
                                                    year={award.year}
                                                    category={award.category}
                                                />
                                            </div>
                                        ))}
                                </div>
                            </div>
                        ),
                    )
                }
            </div>
        </div>
    </section>

    <script lang="ts">
        const piFilterBtns = document.querySelectorAll(".pi-filter-btn");
        const piYearGroups = document.querySelectorAll(".pi-year-group");

        // Auto-update counts
        function updateCounts() {
            const meritCount = document.querySelectorAll(
                '.pi-award-item[data-category="merit"]',
            ).length;
            const paperCount = document.querySelectorAll(
                '.pi-award-item[data-category="paper"]',
            ).length;
            const competitionCount = document.querySelectorAll(
                '.pi-award-item[data-category="competition"]',
            ).length;
            const totalCount = meritCount + paperCount + competitionCount;

            piFilterBtns.forEach((btn) => {
                const filter = btn.getAttribute("data-filter");
                if (filter === "all") {
                    btn.textContent = `All (${totalCount})`;
                } else if (filter === "merit") {
                    btn.textContent = `🏅 Merit Awards (${meritCount})`;
                } else if (filter === "paper") {
                    btn.textContent = `📄 Paper Awards (${paperCount})`;
                } else if (filter === "competition") {
                    btn.textContent = `🏆 Competition Awards (${competitionCount})`;
                }
            });
        }
        updateCounts();

        piFilterBtns.forEach((btn) => {
            btn.addEventListener("click", () => {
                piFilterBtns.forEach((b) => {
                    b.classList.remove(
                        "active",
                        "bg-accent",
                        "text-white",
                        "shadow-lg",
                        "shadow-accent/30",
                    );
                    b.classList.add(
                        "bg-gray-100",
                        "text-gray-700",
                        "hover:bg-gray-200",
                    );
                });
                btn.classList.add(
                    "active",
                    "bg-accent",
                    "text-white",
                    "shadow-lg",
                    "shadow-accent/30",
                );
                btn.classList.remove(
                    "bg-gray-100",
                    "text-gray-700",
                    "hover:bg-gray-200",
                );

                const filter = btn.getAttribute("data-filter");

                piYearGroups.forEach((group) => {
                    const items = group.querySelectorAll(".pi-award-item");
                    let visibleCount = 0;

                    items.forEach((item) => {
                        if (
                            filter === "all" ||
                            item.getAttribute("data-category") === filter
                        ) {
                            item.classList.remove("hidden");
                            visibleCount++;
                        } else {
                            item.classList.add("hidden");
                        }
                    });

                    // Update year count
                    const yearCountEl = group.querySelector(".pi-year-count");
                    if (yearCountEl) {
                        yearCountEl.textContent = `${visibleCount} ${visibleCount === 1 ? "award" : "awards"}`;
                    }

                    if (visibleCount > 0) {
                        group.classList.remove("hidden");
                    } else {
                        group.classList.add("hidden");
                    }
                });
            });
        });
    </script>
    <!-- Back to Top Button -->
    <button
        id="back-to-top"
        class="fixed bottom-8 right-8 bg-accent text-white p-3 rounded-full shadow-lg opacity-0 invisible transition-all duration-300 z-50 hover:-translate-y-1 hover:shadow-accent/50 group"
        aria-label="Back to Top"
    >
        <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
        </svg>
    </button>

    <script>
        // Back to Top Button Logic
        const backToTopBtn = document.getElementById("back-to-top");

        window.addEventListener("scroll", () => {
            if (window.scrollY > 300) {
                backToTopBtn?.classList.remove("opacity-0", "invisible");
            } else {
                backToTopBtn?.classList.add("opacity-0", "invisible");
            }
        });

        backToTopBtn?.addEventListener("click", () => {
            window.scrollTo({
                top: 0,
                behavior: "smooth",
            });
        });
    </script>
